{
    "manifest_version": 2,

    "name": "PictureSearch",
    "description": "This extension can help you with google search picrute",
    "version": "1.0",

    "background": {
        "scripts": ["background.js", "mutex.js"],
        "persisent": false
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content.js", "mutex.js"]
        }
    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "activeTab",
        "http://localhost:8080/*"
    ]
}